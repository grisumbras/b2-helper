import errors ;
import option ;
import testing ;
import package ;

project package-test ;


if [ option.get foo : : yes ] != yes { errors.error option foo not set ; }

if [ option.get bar ] != baz { errors.error option bar is not baz ; }

exe example : example.cpp ;

run example : target-name test ;

package.install install package-test : : example ;

explicit test install ;
